---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Content from '~/components/widgets/Content.astro';
import {getJoinPermalink } from '../utils/permalinks';

import { headerData } from '~/data';

const meta = {
  title: 'PLEBNET.DEV Sponsors',
};
---

<Layout {meta}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          type: 'primary',
          text: 'Join Us',
          href: getJoinPermalink(),
        },
      ]}
      isSticky
    />
  </Fragment>

  <Content>
    <Fragment slot="content">
      <h1 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Sponsors</h1>
      <p class="mb-8">Thank you to all our fabulous sponsors!</p>
      <div class="grid grid-cols-4 gap-8">
        <div>
          <a href="https://lightnin.games" target="_blank">
            <img src="/images/sponsors/lngames.jpg" alt="lightning games" width="100" />
          </a>
        </div>
        <div>
          <a href="https://www.buckstobitcoin.com" target="_blank">
            <img src="/images/sponsors/Bucks_to_Bitcoin_Logo.webp" alt="Bucks 2 Bitcoin" width="100" />
          </a>
        </div>
        <div>
          <img src="/images/icon-orange-transparent.png" alt="icon" width="100" />
          <span style={{ fontSize: '1rem' }}>Your Logo Here!</span>
        </div>
      </div>
    </Fragment>
  </Content>
</Layout>
